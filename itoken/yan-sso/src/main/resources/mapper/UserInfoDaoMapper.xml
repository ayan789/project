<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.demo.UserInfoDao">
    <select id="getByMap" parameterType="map" resultType="map">
        SELECT * FROM user_info
    </select>

    <select id="getByUid" parameterType="map" resultType="com.example.demo.UserInfo">
        SELECT * FROM user_info where uid=#{uid}
    </select>

    <select id="getByUserName" parameterType="map" resultType="com.example.demo.UserInfo">
        SELECT * FROM user_info where username=#{uaerName}
    </select>

</mapper>
