<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" 
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ccic.salesapp.noncar.repository.basedb.mapper.SMSMessageMapper">

  <insert id="insert" parameterType="java.util.HashMap">
    insert into t_noncar_sms_message (MOBILE,USERCODE,MESSAGE,CREATE_DATE)
    values (#{mobile}, #{userCode}, #{message}, now())
  </insert>

   <select id="countByMobile" parameterType="java.lang.String" resultType="java.lang.Integer">
   	select count(1) from t_noncar_sms_message t where MOBILE=#{mobile} and CREATE_DATE&gt;date_add(now(),INTERVAL -1 MINUTE)
   </select>

</mapper>