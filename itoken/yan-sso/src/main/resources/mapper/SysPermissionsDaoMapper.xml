<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.demo.SysPermissionsDao">
    <select id="getByPermissionsList" parameterType="map" resultType="com.example.demo.SysPermissions">
       SELECT
            sp.*
        FROM
            sys_permission sp
            LEFT JOIN sys_role_permission srp ON sp.id = srp.permission_id
        WHERE
            srp.role_id=#{roleId}
    </select>

    <select id="getAllPermisList"  resultType="com.example.demo.SysPermissions">
       SELECT
            sp.*
        FROM
            sys_permission sp
    </select>

</mapper>
