<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper
	namespace="com.ccic.salesapp.noncar.repository.basedb.mapper.StoreAccidentalinjuryMapper">
	<resultMap type="com.ccic.salesapp.noncar.dto.AccidentalInjuryInfo"
		id="BaseResultMap">
		<result column="ID" property="id" />
		<result column="INSUREINFO_ID" property="insureInfoId" />
		<result column="FAMILY_NAME" property="familyName" />
		<result column="FAMILYIDENTIFY_TYPE" property="familyIdentifyType" />
		<result column="FAMILYIDENTIFY_NO" property="familyIdentifyNo" />
		<result column="FAMILYRELATION" property="familyRelation" />
		<result column="mobile" property="mobile" />
		<result column="insuredSheBaoType" property="insuredSheBaoType" />
		<result column="insuredbirth_date" property="insuredBirthDate" />
		<result column="insured_age" property="age" />
		<result column="insured_email" property="insuredEmail" />

	</resultMap>
	
	<select id="doSelect" resultMap="BaseResultMap" parameterType="java.math.BigDecimal">
		select * from t_noncar_accidentalinjury where
		INSUREINFO_ID=#{insureInfoId}
	</select>



	<insert id="doInsert" parameterType="com.ccic.salesapp.noncar.dto.AccidentalInjuryInfo">
		INSERT INTO t_noncar_accidentalinjury
		(
		INSUREINFO_ID,
		FAMILY_NAME,
		FAMILYIDENTIFY_TYPE,
		FAMILYIDENTIFY_NO,
		FAMILYRELATION,
		mobile,
		insuredSheBaoType,
		insuredbirth_date,
		insured_age,
		insured_email,
		CREATE_DATE)
		VALUES
		(
		#{insureInfoId},
		#{familyName},
		#{familyIdentifyType},
		#{familyIdentifyNo},
		#{familyRelation},
		#{mobile},
		#{insuredSheBaoType},
		#{insuredBirthDate},
		#{age},
		#{insuredEmail},
		now())
	</insert>
</mapper>
