<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ccic.salesapp.performance.domain.mapper.UserInfoMapper">

    <!-- 可根据自己的需求，是否要使用 -->
    <resultMap type="com.ccic.salesapp.performance.domain.vo.dto.UserInfo" id="result">
        <id column="id" property="userId" jdbcType="BIGINT"/>
        <result column="username" property="username" jdbcType="VARCHAR"/>
        <result column="name" property="name" jdbcType="VARCHAR"/>
    </resultMap>

    <insert id="insert" parameterType="com.ccic.salesapp.performance.domain.vo.dto.UserInfo" keyProperty="userId" keyColumn="id" useGeneratedKeys="true">
        INSERT INTO
            user_info (`username`, `name`)
        VALUES
            (#{username}, #{name})
    </insert>

    <select id="getAll" resultMap="result">
        select * from user_info where 1=1
    </select>

</mapper>